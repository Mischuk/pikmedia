extends ../modules/layout/layout.jade

block title
  title Новости

block content
  .main
    .m_breadcrumbs
      .container-fluid
        ul
          li: a(href="#") Главная
          li: a(href="#") Агенство
          li: a(href="#") Публикация
    main
      .container-fluid
        .content
          .m_news
            .section-title.border.left.medium
              h2 Новости
            .list
              .row
                - for (var x = 0; x < 15; x++)
                  .col-sm-4.col-xs-6
                    .date 20.07.2015
                    .title: a(href="#"): span Успешно реализовали промо сайт для компании Виалон Ойл.
                    .paragraph.small Компания «Виалон Ойл» — поставщик уникальных программных решений Wialon Oil Cards и Wialon oil Service.
            .m_pagination
              ul
                li: button.prev: i.icon-arrow
                li: a(href="#") 1
                li: a(href="#") 2
                li: a(href="#") 3
                li.current: a(href="#") 4
                li: a(href="#") 5
                li: a(href="#") 6
                li: a(href="#") 7
                li: button.next: i.icon-arrow
        .sidebar.small-radius
          ul
            li: a(href="#"): span Об агентстве
            li: a(href="#"): span Кейсы наших клиентов
            li: a(href="#"): span Наши публикации
            li: a(href="#"): span Отзывы наших клиентов
            li.current: a(href="#"): span Новости
            li: a(href="#"): span Контакты
