// Mobile burger button
.mobile-menu-trigger
  display none
  position absolute
  right 15px
  top 50%
  width 40px
  height 40px
  margin-top -(@height/2)
  border 2px solid #fff
  border-radius 50%
  cursor pointer
  @media screen and (max-width: 850px)
    display block
  &:after,
  &:before,
  span
    anim()
    content ''
    position absolute
    left 50%
    width 20px
    margin-left -10px
    height 2px
    background #fff
  &:before
    top 10px
  &:after
    bottom 10px
  span
    top 50%
    margin-top -1.5px
  &.open
    span
      opacity 0
      transform translateX(-5px)
    &:after
      transform: rotate(135deg) translate(-6px, 6px)
    &:before
      transform: rotate(-135deg) translate(-4px, -4px)
.slick-dots
  position absolute
  left 0
  bottom 40px
  width 100%
  text-align center
  li
    dib(middle)
    margin-left 10px
    margin-right 10px
    &.slick-active button
      background $blue
    button
      width 16px
      height 16px
      border 3px solid $blue
      border-radius 50%
      text-indent -9999px
      background none
      box-shadow inset 0 0 0 2px #fff
.slick-arrow
  position absolute
  top 50%
  height 75px
  margin-top -(@height/2)
  width 40px
  text-indent -9999px
  border none
  z-index 15
  @media screen and (max-width: 768px)
    width 20px
    height 37.5px
    margin-top -18.75px
  &.slick-prev
    left 30px
    background url('../images/arrows.png') no-repeat 0 -194px
    @media screen and (max-width: 768px)
      left 15px
      background-position -20px -398px
    &:hover
      background-position  0 -97px
      @media screen and (max-width: 640px)
        background-position -20px -349px
  &.slick-next
    right 30px
    background url('../images/arrows.png') no-repeat -62px -194px
    @media screen and (max-width: 768px)
      right 15px
      background-position -51px -398px
    &:hover
      background-position -58px -97px
      @media screen and (max-width: 768px)
        background-position -49px -349px
.btn-blue
  anim()
  display inline-block
  vertical-align middle
  height 30px
  line-height 28px
  color #fff
  background $blue
  padding 0 17px
  text-transform uppercase
  border-radius $radius
  font-size 11px
  font-weight 600
  border 1px solid $blue
  &:hover, &:focus
    background #fff
    color $blue
    text-decoration none


.btn-white
  anim()
  display block
  border 2px solid #fff
  border-radius $radius
  font-weight 600
  font-size 16px
  text-transform uppercase
  color #fff
  height 50px
  line-height 46px
  width 230px
  text-align center
  text-decoration none
  text-shadow 1px 1px 1px rgba(0,0,0,.25)
  box-shadow 1px 1px 1px rgba(0,0,0,.25)
  &:hover, &:focus
    background #fff
    color $blue
    text-shadow none
    text-decoration none
  &.large
    width 300px
    height 60px
    line-height 56px
    +below(360px)
      width 90%
      margin 0 auto

.btn-blue-border
  anim()
  display block
  margin 0 auto
  border 2px solid $blue
  border-radius $radius
  font-weight 600
  font-size 16px
  text-transform uppercase
  color $blue
  height 50px
  line-height 46px
  width 370px
  text-align center
  text-decoration none
  text-shadow 1px 1px 1px rgba(0,0,0,.25)
  box-shadow 1px 1px 1px rgba(0,0,0,.25)
  &:hover, &:focus
    background $blue
    color #fff
    text-shadow none
    text-decoration none
  &.small
    height 40px
    line-height 36px
    width auto
    padding-left 25px
    padding-right 25px
    box-shadow none
    display inline-block
    vertical-align middle
    text-shadow none
  @media screen and (max-width: 420px)
    width 90%