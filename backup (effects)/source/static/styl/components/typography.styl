.page-title
  font-size 30px
  line-height 1
  text-transform uppercase
  color #000
.section-description
  font-size 24px
  line-height 36px
  font-weight 600
  margin-bottom 30px
  margin-top 20px
  @media screen and (max-width: 460px)
    font-size 20px
    line-height 24px
.section-title
  position relative
  z-index 100
  background #fff
  text-align center
  padding 65px 0 70px 0
  &.small
    padding 35px 0
  &.medium
    padding-top 45px
  &.border
    h2, h1
      &:after
        content ''
        width 170px
        height 3px
        background $blue
        position absolute
        left 50%
        bottom 35px
        margin-left -(@width/2)
        @media screen and (max-width: 768px)
          bottom 15px
  &.left
    text-align left
    h2:after, h1:after
      left 4px
      margin-left 0
  &.white
    background none
    h2
      color #fff
      &::first-letter
        color #fff
      &:after
        background #fff
  @media screen and (max-width: 768px)
    padding 30px 0 35px 0
  @media screen and (max-height: 380px)
    padding 15px 0 30px 0
  h2, h1
    font-size 48px
    line-height 1
    font-weight 600
    &.small
      font-size 32px
    +below(768px)
      font-size 40px
    &::first-letter
      color $blue

a
  color $blue
  &:focus
    color $blue
    text-decoration none



.heading-large
  font-size 48px
  line-height 1
  font-weight 600
  @media screen and (max-width: 992px)
    font-size 44px
  @media screen and (max-width: 640px)
    font-size 40px
  @media screen and (max-width: 380px)
    font-size 32px


.heading-medium
  font-size 32px
  line-height 46px
  font-weight 600
  @media screen and (max-width: 768px)
    font-size 24px
    line-height 1.2

.heading-small
  font-size 24px
  line-height 34px
  font-weight 600
  margin-bottom 25px
  @media screen and (max-width: 640px)
    margin-bottom 5px


.paragraph
  font-size 16px
  line-height 1.2
  &.large-lh
    line-height 1.5
  &.light
    font-weight 300
  &.italic
    font-style italic
  &.small
    font-size 14px
  &.medium
    font-size 18px
  &.large
    font-size 24px
    @media screen and (max-width: 992px)
      font-size 20px
    @media screen and (max-width: 568px)
      font-size 18px
  &.space
    padding 15px 0
  &.outer
    margin 30px 0