#modal, #modal-success
  background: white;
  padding: 20px 30px;
  text-align: left;
  max-width: 400px;
  margin: 40px auto;
  position: relative;
  .modal-heading
    font-weight 600
    text-align center
    color $blue
    text-transform uppercase
    font-size 24px
    margin-bottom 20px
  form
    label
      display block
      margin-bottom 20px
      .label
        display block
        margin-bottom 5px
      input
        height 40px
        line-height 40px
        padding 0 10px
        &.highlight
          border-color red
      textarea,
      input
        anim()
        width 100%
        border 1px solid #dcdcdc
        &:focus
          border-color #393939
      textarea
        padding 10px
        height 120px
        resize none
    .submit
      button
        anim()
        background $blue
        color #fff
        border-radius $radius
        font-weight 600
        text-transform uppercase
        width 150px
        line-height 36px
        height 40px
        border 2px solid $blue
        &:hover
          background #fff
          color $blue

#modal-success
  max-width 450px
  .modal-heading
    margin-top 20px

