.m_clients
  background #fff
  &.gray
    background #f5f5f5
    .section-title
      background #f5f5f5
  .client-carousel,
  .partners-carousel
    padding-bottom 150px
    @media screen and (max-width: 1200px)
      padding-left 75px
      padding-right 75px
    .slick-arrow
      &.slick-prev
        background-position -4px 0
        left -100px
        @media screen and (max-width: 1400px)
          left -50px
        @media screen and (max-width: 1300px)
          left -15px
        @media screen and (max-width: 1200px)
          left 15px
        @media screen and (max-width: 768px)
          background-position -22px -301px
        &:hover
          background-position 0 -97px
          @media screen and (max-width: 768px)
            background-position -20px -349px
      &.slick-next
        background-position -62px 0
        right -100px
        @media screen and (max-width: 1400px)
          right -50px
        @media screen and (max-width: 1300px)
          right -15px
        @media screen and (max-width: 1200px)
          right 15px
        @media screen and (max-width: 768px)
          background-position -51px -301px
        &:hover
          background-position -58px -97px
          @media screen and (max-width: 768px)
            background-position -49px -349px
    .image
      height 130px
      line-height 130px
      text-align center
      img
        width auto
        max-height 100%
        max-width 90%
        display inline-block
        vertical-align middle
    .paragraph
      color #828282
      padding 0 20px
      text-align center
  .client-carousel
    .slick-arrow
      top 29px
      margin-top 0
      @media screen and (max-width: 768px)
        top 50px
  .partners-carousel
    .slick-arrow
      top 33px
      margin-top 0
      @media screen and (max-width: 768px)
        top 50px
