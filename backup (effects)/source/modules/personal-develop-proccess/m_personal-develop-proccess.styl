.m_personal-develop-proccess
  background #fff
  padding-bottom 60px
  @media screen and (max-width: 768px)
    padding-bottom 25px
  article
    @media screen and (max-width: 768px)
      margin-top 30px
    .paragraph
      margin 40px 0
  .steps
    .col-sm-3
      @media screen and (max-width: 380px)
        width 100%
    .title
      font-weight 300
      font-size 24px
      line-height 34px
      margin-bottom 40px
    .item
      .icons
        height 110px
        color $blue
        font-size 80px
        @media screen and (max-width: 380px)
          height auto
          margin-bottom 10px
      .desc
        @media screen and (max-width: 768px)
          height 60px
        @media screen and (max-width: 380px)
          height auto
          margin-bottom 35px
