.m_header
  anim()
  overflow hidden
  background #393939
  position fixed
  left 0
  top 0
  width 100%
  z-index 1000
  height 90px
  +below(850px)
    overflow visible
  &.fixed
    height 60px
    box-shadow 0 0 5px rgba(0,0,0,.5)
    .logo
      height 44px
      margin 6px 0
      a
        height 44px
        width 37px
    .contacts
      line-height 60px
      +below(1100px)
        line-height 40px
        .callback
          opacity 0
      +below(850px)
        line-height 60px
    .nav
      height 60px
      +below(850px)
        top 60px
      ul li a:after
        bottom -21px
  .logo
    anim()
    float left
    width 170px
    height 70px
    margin-top 10px
    margin-bottom 10px
    +below(992px)
      width 120px
    a
      anim()
      display block
      width 58px
      height 70px
      background url("../images/logo-normal.png") no-repeat 0 0
      background-size contain
      @media  only screen and (-webkit-min-device-pixel-ratio: 1.3), only screen and (-o-min-device-pixel-ratio: 13/10), only screen and (min-resolution: 120dpi)
        background url("../images/logo-normal@x2.png") no-repeat 0 0
        background-size contain
      +below(850px)
        position relative
        z-index 10
  .contacts
    anim()
    position absolute
    right 15px
    top 0
    width 370px
    line-height 90px
    text-align right
    +below(1100px)
      width 230px
      line-height 30px
      text-align center
    +below(850px)
      width 100%
      right 0
      line-height 90px
    .address,
    .callback
      display inline-block
      vertical-align top
      +below(1100px)
        display block
    .address
      font-size 20px
      font-weight 600
      color #fff
      margin-right 30px
      +below(1100px)
        margin-right 0
        margin-top 10px
      @media screen and (max-width: 320px)
        font-size 16px
      +below(850px)
        margin-top 0
      address, a
        font-style normal
        color #fff !important
        text-decoration none !important
        a
          color #fff !important
          text-decoration none !important
    .callback
      +below(850px)
        display none
  .nav
    anim()
    position relative
    margin-left 170px
    margin-right 370px
    height 90px
    +below(1100px)
      margin-right 230px
    +below(992px)
      margin-left 120px
    +below(850px)
      position absolute
      left 0
      top 90px
      background #393939
      width 100%
      margin 0
      height auto !important
      transform translateX(100%)
      box-shadow 0 5px 5px rgba(0,0,0,.2)
      z-index 100
      &.open
        transform translateX(0%)
    ul
      display table
      width 100%
      height 100%
      +below(850px)
        display block
        border-top 1px solid #323232
      li
        position relative
        display table-cell
        vertical-align middle
        text-align center
        +below(850px)
          display block
          &.open
            > a
              background $blue !important
              border-color $blue !important
        a
          anim()
          position relative
          font-weight 600
          text-transform uppercase
          color #fefefe
          +below(850px)
            display block
            padding 20px 0
            border-bottom 1px solid #323232
            &:hover,
            &:focus,
            &.open
              background $blue
              span
                color #fff
          &:after
            anim()
            content ''
            height 0
            position absolute
            left 0
            bottom -36px
            width 100%
            background $blue
            +below(850px)
              display none
          &:hover
            color $blue
            text-decoration none
            &:after
              height 6px
    .dropdown
      display none
      border-color #075a74
      li
        a
          background #075a74
          border-color #075a74
          color #fff !important
      &.open
        display block