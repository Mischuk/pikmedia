.m_lead-portfolio
  .full-carousel
    position relative
    &:before, &:after
      content ''
      width 12%
      height 500px
      position absolute
      top 0
      z-index 10
      background none
      @media screen and (max-width: 768px)
        display none
    &:before
      left 0
      box-shadow inset 175px 3px 153px -90px rgba(0,0,0,0.86)
      @media screen and (max-width: 1400px)
        box-shadow inset 175px 0px 120px -90px rgba(0,0,0,0.86)
      @media screen and (max-width: 1250px)
        box-shadow inset 175px 0px 120px -110px rgba(0,0,0,0.86)
      @media screen and (max-width: 1024px)
        box-shadow inset 160px 0px 120px -110px rgba(0,0,0,0.86)
      @media screen and (max-width: 900px)
        box-shadow inset 160px 0px 120px -130px rgba(0,0,0,0.86)
    &:after
      right 0
      box-shadow inset -175px 3px 153px -90px rgba(0,0,0,0.86)
      @media screen and (max-width: 1400px)
        box-shadow inset -175px 0px 120px -90px rgba(0,0,0,0.86)
      @media screen and (max-width: 1250px)
        box-shadow inset -175px 0px 120px -110px rgba(0,0,0,0.86)
      @media screen and (max-width: 1024px)
        box-shadow inset -160px 0px 120px -110px rgba(0,0,0,0.86)
      @media screen and (max-width: 900px)
        box-shadow inset -160px 0px 120px -130px rgba(0,0,0,0.86)
  .vertical-inner
    position relative
    z-index 10
  .item
    position relative
    height 500px
    text-align center
    @media screen and (max-height: 520px)
      height 400px
    @media screen and (max-height: 420px)
      height 300px
    &:after
      anim()
      content ''
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      background rgba(0,0,0,.5)
      html.touchevents &
        background rgba(0,0,0,.5) !important
    &:hover
      &:after
        background rgba(12, 133, 170, .8)
    .image
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      background-repeat no-repeat
      background-position 50%
      background-size cover
    .details
      a
        margin 0 auto
    .title
      position relative
      margin-bottom 70px
      font-size 22px
      line-height 34px
      color #fff
      padding 30px 10px 0 10px
      @media screen and (max-width: 640px)
        line-height 1.3
      &:after
        content ''
        height 3px
        width 170px
        position absolute
        bottom -35px
        left 50%
        margin-left -(@width/2)
        background #fff
      a
        anim()
        text-decoration underline
        color rgba(255,255,255,.5)
        &:hover
          text-decoration none
        span
          color rgba(255,255,255,1)
    .large-description
      position absolute
      left 0
      bottom 0
      z-index 10
      padding 30px
      text-align left
      a
        anim()
        text-decoration underline
        color rgba(255,255,255,.5)
        &:hover
          text-decoration none
        span
          color rgba(255,255,255,1)
      .project
        position relative
        margin-bottom 50px
        font-size 24px
        line-height 34px
        &:after
          content ''
          height 3px
          width 100%
          position absolute
          bottom -25px
          left 0
          background #fff
        @media screen and (max-width: 640px)
          line-height 1.3
      .desc
        font-size 14px
        line-height 24px
        color #fff
  > .details
    background #fff
    position relative
    z-index 120
    padding 60px 0
    border-bottom 1px solid #dcdcdc
    @media screen and (max-height: 380px)
      padding 30px 0
  .portfolio-all-projects-nav
    text-align center
    margin-bottom 45px
    @media screen and (max-width: 960px)
      margin-bottom 0
    a
      font-size 14px
      margin-left 10px
      margin-right 10px
      @media screen and (max-width: 960px)
        width 35%
        margin-left 5%
        margin-right 5%
        margin-bottom 5%
      @media screen and (max-width: 700px)
        width 45%
        margin-left 2%
        margin-right 2%
        margin-bottom 5%
      @media screen and (max-width: 568px)
        display block
        width 250px
        margin 10px auto
