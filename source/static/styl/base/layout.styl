/*!=========================
      Base grid styles
==========================*/
$wrapper = 980px
$footer = 170px

html
  position relative
  min-height 100%
body
  font-size 16px
  line-height 1.2
  color #000
  background #f6f6f6
  margin-bottom $footer
.container
  width auto
  max-width 980px
.m_footer
  height $footer
  width 100%
  position absolute
  bottom 0
.wrapper
  clearfix()
  position relative
  width $wrapper
  height 100%
  padding-left 15px
  padding-right 15px
  margin-left auto
  margin-right auto
