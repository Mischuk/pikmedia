.m_lead-media
  clearfix()
  .item
    clearfix()
    position relative
    float left
    width 50%
    @media screen and (max-width: 768px)
      width 100%
      height auto
    @media screen and (max-width: 380px)
      padding-bottom 60px
    &:first-child
      background #fff
      .wrap
        float right
    &:last-child
      background #f5f5f5
      .wrap
        float left
        padding-left 30px
        @media screen and (max-width: 568px)
          padding 0 15px
    .wrap
      width 600px
      padding 0 15px
      @media screen and (max-width: 1220px)
        width 100%
        padding 0 30px
      @media screen and (max-width: 568px)
        padding 0 15px
  .header
    clearfix()
    margin-bottom 40px
    .heading
      float left
      position relative
      font-size 32px
      line-height 1
      font-weight 600
      padding-bottom 40px
      @media screen and (max-width: 480px)
        padding-bottom 15px
      &:after
        content ''
        width 170px
        height 3px
        background $blue
        position absolute
        left 0
        bottom 0
      &::first-letter
        color $blue
    .details
      float left
      line-height 48px
      margin-left 40px
      @media screen and (max-width: 768px)
        float right
      @media screen and (max-width: 480px)
        position absolute
        left 15px
        bottom 25px
        margin-left 0
      a
        display inline-block
        vertical-align bottom
        font-size 14px
        color $blue
        &:hover
          text-decoration none
      span
        display inline-block
        vertical-align middle
        line-height 14px
        border-bottom 1px solid rgba(12, 133, 170, .5)
        &:hover
          border-color $blue
      i
        font-size 8px
        position relative
        top -1px
  .columns
    clearfix()
  .col
    float left
    width 50%
    padding-right 30px
    @media screen and (max-width: 480px)
      width 100%
      padding-right 0
      margin-bottom 30px
    .title
      margin-bottom 20px
      @media screen and (max-width: 480px)
        margin-bottom 10px
      a
        display inline-block
        vertical-align middle
        font-size 16px
        line-height 24px
        color rgba(12, 133, 170, .5)
        text-decoration underline
        span
          color $blue
        &:hover
          color $blue
          span
            color rgba(12, 133, 170, .99)
    .tags
      margin-top 20px
      @media screen and (max-width: 480px)
        margin-top 10px
      .tag
        position relative
        margin-right 25px
        padding-left 25px
        font-size 14px
        color #828282
        &:before
          icon()
          content '\e911'
          position absolute
          left 0
          top 50%
          line-height 14px
          height 14px
          margin-top -7px
        a
          color #828282
          &:hover
            color #000
