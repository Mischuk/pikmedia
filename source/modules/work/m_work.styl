.m_work
  position relative
  .before, .after
    position relative
    padding-bottom 15px
    img
      margin-bottom 0
    & + .label
      color #828282
      font-size 14px
      margin-bottom 40px


  .proccess
    overflow hidden
    .item
      position relative
      padding-top 25px
      padding-bottom 30px
      padding-right 30px
      padding-left 130px
      background #f5f5f5
      margin-top 30px
      @media screen and (max-width: 768px)
        min-height 125px
      &:before
        content ''
        position absolute
        left 0
        top -30px
        background #fff
        z-index 10
        width 100%
        height 30px

      &:after
        content ''
        position absolute
        left 0
        top 100%
        width 100%
        height 300px
        background #f5f5f5
    .icon
      position absolute
      left 30px
      top 20px
      font-size 70px
      color $blue
  .results
    .list
      .item
        margin-top 50px
        margin-bottom 50px
      .cell
        display table
        table-layout fixed
        @media screen and (max-width: 640px)
          clearfix()
          display block
        .image, .text
          display table-cell
          vertical-align middle
          width 50%
          @media screen and (max-width: 640px)
            display block
            width 100%
        .image
          @media screen and (max-width: 640px)
            text-align center
          &.desktop
            display table-cell
            @media screen and (max-width: 640px)
              display none
          &.mobile
            display none
            @media screen and (max-width: 640px)
              display block
          img
            margin-bottom 0
            @media screen and (max-width: 640px)
              max-height 300px
              width auto
        .text
          &:first-child
            padding-right 50px
            @media screen and (max-width: 640px)
              padding-right 0
          &:last-child
            padding-left 50px
            @media screen and (max-width: 640px)
              padding-left 0
          .paragraph
            margin-top 20px
            margin-bottom 20px
            font-size 18px
            line-height 30px
            font-weight 600