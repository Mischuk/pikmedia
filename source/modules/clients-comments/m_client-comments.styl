.m_client-comments
  .col-xs-6
    @media screen and (max-width: 568px)
      width 100%
  .image
    position absolute
    left 15px
    top 0
    size(100px)
    line-height 98px
    border-radius 50%
    border 1px solid #dcdcdc
    text-align center
    @media screen and (max-width: 992px)
      left 50%
      top 0
      margin-left -50px
    @media screen and (max-width: 568px)
      left 15px
      margin-left 0
    @media screen and (max-width: 360px)
      left 50%
      top 0
      margin-left -50px
    img
      max-width 70px
      display inline-block
      vertical-align middle
  .message
    padding-left 130px
    padding-bottom 40px
    @media screen and (max-width: 992px)
      padding-left 0
      padding-top 120px
      padding-bottom 80px
    @media screen and (max-width: 568px)
      padding-left 130px
      padding-top 0
      padding-bottom 40px
    @media screen and (max-width: 992px)
      padding-left 0
      padding-top 120px
      padding-bottom 80px
    .title
      font-weight 600
      margin-bottom 20px
    .username
      margin-top 20px
      color #828282
      font-size 14px
  .tags
    margin-top 20px
    @media screen and (max-width: 460px)
      margin-top 10px
    .tag
      position relative
      margin-right 25px
      padding-left 25px
      font-size 14px
      color #828282
      &:before
        icon()
        content '\e911'
        position absolute
        left 0
        top 50%
        line-height 14px
        height 14px
        margin-top -7px
      a
        anim()
        color $blue
        border-bottom 1px solid $blue-half
        &:hover
          color #000
          border-color transparent
          text-decoration none