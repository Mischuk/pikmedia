.m_full-quotes
  background $blue
  color #fff
  .paragraph
    p, i
      display inline-block
      vertical-align top
    p
      margin 0
      max-width 90%
    i
      font-size 35px
      margin-right 35px

  .details
    margin-top 35px
    a
      color #fff
      font-weight 300
      font-size 24px
      @media screen and (max-width: 768px)
        font-size 20px
      span
        border-bottom 1px solid rgba(255,255,255,.5)
      i
        font-size 10px
        position relative
        top 13px
        margin-left 5px
      &:hover
        text-decoration none
        span
          border-color transparent