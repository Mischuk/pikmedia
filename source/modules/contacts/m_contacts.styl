.m_contacts
  height 1200px
  @media screen and (max-width: 767px)
    height auto
    padding-bottom 250px
  .map
    #map
      position relative
      width 100%
      height 100%
      .ymaps-2-1-42-inner-panes
        &:after
          content ''
          position absolute
          left 0
          top 0
          width 100%
          height 100%
          background rgba(12, 133, 170, .4)
          z-index 1000
      .ymaps-2-1-42-image
        z-index 5000
  .info
    position relative
    width 970px
    margin 0 auto
    padding-top 50px
    @media screen and (max-width: 1024px)
      width 96%
    .wrap-border
      border 2px solid #fff
      padding 5px
    .wrap
      background #fff
      overflow hidden
      padding-left 60px
      padding-right 60px
      padding-bottom 40px
      @media screen and (max-width: 640px)
        padding-left 30px
        padding-right 30px
    .section-title
      padding-top 40px
    .action
      margin-top 40px
    .paragraph
      height 80px
      @media screen and (max-width: 767px)
        margin-top 20px
        margin-bottom 20px
        height auto
    .contact
      margin-bottom 40px
      font-weight 600
      font-size 24px
      line-height 1
      @media screen and (max-width: 767px)
        margin-bottom 20px
      .single-block
        display inline-block
        vertical-align middle
      a
        &:hover
          color $blue
          text-decoration underline
    .image
      img
        width 100%
        height auto