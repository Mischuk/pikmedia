.m_portfolio
  position relative
  .tags-carousels
    .full-carousel
      display none
  .slick-arrow
    width 20px
    height 38px
    margin-top -19px
    &.slick-prev
      background-position -22px -301px
      left 5px
    &.slick-next
      background-position -51px -301px
      right 5px
  .portfolio-carousel-single
    height 800px
    @media screen and (max-width: 992px)
      height 700px
    @media screen and (max-width: 640px)
      height 500px
    .slide
      position relative
      height 800px
      @media screen and (max-width: 992px)
        height 700px
      @media screen and (max-width: 640px)
        height 500px
      .wrap-border
        width 970px
        margin 0 auto
        border 2px solid rgba(0,0,0,.7)
        padding 5px
        @media screen and (max-width: 1024px)
          width 90%
        @media screen and (max-width: 640px)
          width 100%
          border none
          padding 0
      .wrap
        background rgba(0,0,0,.8)
      .text
        position relative
        width 100%
        height 100%
        color #fff
        box-shadow inset 230px 3px 230px -90px rgba(0,0,0,0.86), inset -230px 3px 230px -90px rgba(0,0,0,0.86)
        .heading-medium
          margin-bottom 35px
          @media screen and (max-width: 640px)
            padding-left 45px
            padding-right 45px
        .details
          a
            margin 0 auto
            font-size 14px
  .portfolio-carousel-thumbs
    @media screen and (max-width: 420px)
      display none
    .slide
      position relative
      height 200px
      &:hover
        .image:after
          background rgba(0,0,0,.7)
      &.slick-current
        .image:after
          background $blue
        .text a
          text-decoration none
      .image
        cursor pointer
        &:after
          anim()
          content ''
          position absolute
          left 0
          top 0
          width 100%
          height 100%
          background rgba(0,0,0,.5)
      .text
        position relative
        link()


