.m_personal-develop
  position relative
  bg("../images/services-bg-0.jpg")
  padding-bottom 190px
  color #fff
  &:before
    pseudo-dark-bg(0.7)
  .intro
    @media screen and (max-height: 950px) and (min-width: 992px)
      padding-top 0
      padding-bottom 35px
    @media screen and (max-height: 850px) and (min-width: 992px)
      padding-bottom 15px
    h1
      heading-line()
    .paragraph
      @media screen and (max-height: 900px) and (min-width: 992px)
        padding-top 0
  .tabs
    anim()
    width 1180px
    margin 0 auto
    background rgba(0,0,0,.6)
    padding 40px 20px
    @media screen and (max-width: 1250px)
      width 96%
    @media screen and (max-width: 768px)
      padding 20px
    @media screen and (max-height: 900px) and (min-width: 992px)
      padding 20px
    &:hover
      background rgba(0,0,0,.8)
    .tabs-nav
      clearfix()
      @media screen and (max-width: 992px)
        display table
        width 100%
      @media screen and (max-width: 768px)
        display block
      .item
        float left
        width 25%
        text-align center
        @media screen and (max-width: 992px)
          float none
          width auto
          display table-cell
          vertical-align middle
        @media screen and (max-width: 768px)
          display block
          padding 10px 0
        a
          anim()
          font-weight 600
          font-size 18px
          line-height 1
          color $blue
          border-bottom 1px solid $blue-half
          @media screen and (max-width: 768px)
            display inline-block
            vertical-align middle
          &:hover
            text-decoration none
            color #fff
            border-bottom 1px solid #fff
        &.current
          a
            color #fff
            border-bottom-color transparent
            cursor default
    .tabs-content
      padding-top 30px
      .paragprah
        margin 0
        @media screen and (max-height: 900px) and (min-width: 992px)
          padding-top 0
      .item
        display none
        &.current
          display block
  .lead-prices
    @media screen and (max-height: 950px) and (min-width: 992px)
      padding-bottom 0
      padding-top 35px
    @media screen and (max-height: 850px) and (min-width: 992px)
      padding-top 15px
      p
        margin-bottom 10px
  .paragraph
    p
      margin-top 0
      @media screen and (max-height: 950px) and (min-width: 992px)
        &:last-child
          margin-bottom 0
    b
      font-weight 600
      dib(top)
  &.clear
    background #f5f5f5
    padding-top 0
    &:before
      display none
    .intro
      color #000
      padding-top 0
      padding-bottom 40px
    .section-title
      background none
    .tabs
      background #fff
      .tabs-nav
        .item
          a
            &:hover
              color #000
              border-color #000
          &.current
            a
              color #000
      .tabs-content
        color #000
    .lead-prices
      color #000
      margin-top 30px
      margin-bottom 30px
      .paragraph
        margin-bottom 20px
        &:last-child
          margin-bottom 0
    & + .m_gift
      border-color #dcdcdc
      .lead
        color #000
        &:after
          color #b4b4b4