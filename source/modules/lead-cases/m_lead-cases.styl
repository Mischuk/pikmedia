.m_lead-cases
  position relative
  box-shadow inset 0 0 50px rgba(0,0,0,.5)
  .case
    height 600px
    color #fff
    &.small
      height auto
      padding 90px 0
      @media screen and (max-width: 568px)
        padding 45px 0
    @media screen and (max-height: 620px)
      height auto
      padding 50px 0
    h2, .paragraph, .details
      position relative
      z-index 120
    h2
      position relative
      font-weight 600
      font-size 36px
      line-height 46px
      margin-bottom 90px
      padding-left 10px
      padding-right 10px
      &.medium
        font-size 32px
        line-height 42px
        margin-bottom 80px
        @media screen and (max-width: 568px)
          font-size 26px
          line-height 1.2
        & + .desc
          width 1170px
          @media screen and (max-width: 1250px)
            width 100%
      @media screen and (max-width: 940px)
        font-size 30px
      @media screen and (max-width: 568px)
        font-size 26px
        line-height 1.2
      &:after
        content ''
        width 170px
        height 3px
        background #fff
        position absolute
        left 50%
        margin-left -(@width/2)
        bottom -35px
    .paragraph
      width 970px
      margin 0 auto
      @media screen and (max-width: 1024px)
        width 90%
    .details
      margin-top 25px
      a
        margin 0 auto