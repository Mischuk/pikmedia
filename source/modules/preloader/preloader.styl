.preloader
  position absolute
  left 0
  top 0
  width 100%
  height 100%
  background: rgba(161,232,220,1);
  background: -moz-linear-gradient(top, rgba(161,232,220,1) 0%, rgba(16,87,168,1) 100%);
  background: -webkit-gradient(left top, left bottom, color-stop(0%, rgba(161,232,220,1)), color-stop(100%, rgba(16,87,168,1)));
  background: -webkit-linear-gradient(top, rgba(161,232,220,1) 0%, rgba(16,87,168,1) 100%);
  background: -o-linear-gradient(top, rgba(161,232,220,1) 0%, rgba(16,87,168,1) 100%);
  background: -ms-linear-gradient(top, rgba(161,232,220,1) 0%, rgba(16,87,168,1) 100%);
  background: linear-gradient(to bottom, rgba(161,232,220,1) 0%, rgba(16,87,168,1) 100%);
  opacity 1
  &.large-z
    z-index 2000
  &:after
    content ''
    width 100%
    height 100%
    position absolute
    left 0
    top 0
    background url("../images/preloader.png") repeat -1px -1px
    opacity .2
#canvas
  overflow hidden