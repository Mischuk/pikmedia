.m_gift
  position relative
  color #fff
  height 190px
  margin-top -190px
  border-top 1px solid rgba(255,255,255,.3)
  @media screen and (max-width: 1250px)
    text-align center
  .lead
    position relative
    float left
    padding 0 170px 0 150px
    font-size 24px
    line-height 36px
    font-weight 300
    width 790px
    @media screen and (max-width: 1250px)
      padding 0 80px 0 90px
      width 640px
      float none
      display inline-block
      vertical-align middle
      text-align left
    @media screen and (max-width: 992px)
      font-size 20px
      width 570px
    @media screen and (max-width: 940px)
      padding-right 0
      margin-bottom 15px
    @media screen and (max-width: 640px)
      width 100%
    @media screen and (max-width: 568px)
      font-size 18px
    @media screen and (max-width: 520px)
      padding-left 0
      padding-top 70px
      text-align center
      line-height 1
    @media screen and (max-width: 380px)
      padding-top 0
      line-height 1.2
      br
        display none
    &:before
      icon()
      content '\e90e'
      position absolute
      left 60px
      top 50%
      color $blue
      font-size 80px
      margin-top -40px
      @media screen and (max-width: 1250px)
        left 0
      @media screen and (max-width: 640px)
        font-size 60px
        margin-top -30px
      @media screen and (max-width: 520px)
        left 50%
        margin-left -30px
        top 0
        margin-top 0
      @media screen and (max-width: 380px)
        display none
    &:after
      icon()
      content '\e903'
      position absolute
      right 75px
      top 50%
      color #fff
      font-size 22px
      margin-top -11px
      @media screen and (max-width: 1250px)
        right 25px
      @media screen and (max-width: 940px)
        display none
    b
      font-weight 700
  .action
    float right
    width 300px
    height 60px
    margin-top 5px
    margin-right 70px
    @media screen and (max-width: 1250px)
      margin-right 0
      float none
      display inline-block
      vertical-align middle
    @media screen and (max-width: 520px)
      height 40px
    @media screen and (max-width: 380px)
      width 100%
    a
      width 100%
      height 100%
      line-height 56px
      font-size 16px
      text-align center
      font-weight 600
      border 2px solid $blue
      @media screen and (max-width: 520px)
        line-height 36px