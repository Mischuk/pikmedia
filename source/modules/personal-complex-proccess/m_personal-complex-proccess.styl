.m_personal-complex-proccess
  background #f5f5f5
  padding-bottom 60px
  border-bottom 1px solid #dcdcdc
  @media screen and (max-width: 768px)
    padding-bottom 25px
  .section-title
    background #f5f5f5
  .action
    width 300px
    height 60px
    margin 0 auto
    @media screen and (max-width: 380px)
      width 100%
    a
      display block
      width 100%
      height 100%
      line-height 56px
      text-align center
      font-size 16px
      border-width 2px
  .steps
    clearfix()
    text-align center
    margin-bottom 50px
    .step
      float left
      width 20%
      @media screen and (max-width: 768px)
        float none
        display inline-block
        vertical-align top
        width 32%
      @media screen and (max-width: 568px)
        width 49%
      @media screen and (max-width: 420px)
        width 100%
      .icons
        height 110px
        color $blue
        font-size 80px
        @media screen and (max-width: 380px)
          height auto
          margin-bottom 10px
      .desc
        font-weight 400
        font-size 16px
        @media screen and (max-width: 768px)
          height 60px
        @media screen and (max-width: 380px)
          height auto
          margin-bottom 35px
