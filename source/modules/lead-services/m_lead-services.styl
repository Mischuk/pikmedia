.m_lead-services
  .list
    clearfix()
  .item
    clearfix()
    position relative
    float left
    width 50%
    height 600px
    @media screen and (max-width: 768px)
      width 100%
      height auto
      padding 100px 0
    @media screen and (max-width: 568px)
      padding 50px 0
    @media screen and (max-height: 380px)
      padding 25px 0
    &:first-child .wrap
      float right
    &:last-child .wrap
      float left
      padding-left 70px
      @media screen and (max-width: 1220px)
        padding-left 30px
      @media screen and (max-width: 568px)
        padding 0 15px
    &:hover
      .image:after
        background rgba(12, 133, 170, .8)
    .wrap
      display table
      width 600px
      height 100%
      padding 0 15px
      @media screen and (max-width: 1220px)
        width 100%
        padding 0 30px
      @media screen and (max-width: 568px)
        padding 0 15px
      .text
        position relative
        z-index 200
        display table-cell
        vertical-align middle
    .image
      position absolute
      right 0
      top 0
      width 100%
      height 100%
      background-repeat no-repeat
      background-position 50%
      background-size cover
      //html.no-touchevents &
      //  background-attachment fixed
      //  &.right
      //    background-position 600px 50%
      //  &.left
      //    background-position -100px 50%
      &:after
        transition all 1s cubic-bezier(.33,.66,.66,1)
        content ''
        position absolute
        left 0
        top 0
        width 100%
        height 100%
        background rgba(0,0,0,.7)
        z-index 190
    .title
      position relative
      font-size 36px
      line-height 46px
      color #fff
      margin-bottom 70px
      @media screen and (max-width: 940px)
        font-size 30px
      @media screen and (max-width: 568px)
        line-height 1.2
        font-size 26px
        br
          display none
      &:after
        content ''
        position absolute
        left 0
        bottom -30px
        width 170px
        height 3px
        background #fff
    .desc
      color #fff
      margin-bottom 50px
      font-size 18px
      font-weight 300

